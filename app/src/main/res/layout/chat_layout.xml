<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/opLayout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/opMessage"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:background="@drawable/msg_back"
                android:text="This is User Message"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/opMsgTime"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="01-01-2001 05:10 PM"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/myLayout"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/myMessage"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/msg_back2"
                android:text="This is Message"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myMsgTime"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="01-01-2001 05:10 PM"/>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>